<Controls:MetroWindow x:Class="DependencyScanner.Standalone.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:converter="clr-namespace:DependencyScanner.Standalone.Converters"
        xmlns:properties="clr-namespace:DependencyScanner.Standalone.Properties"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModel="clr-namespace:DependencyScanner.ViewModel;assembly=DependencyScanner.ViewModel"
        xmlns:local="clr-namespace:DependencyScanner.Standalone"
        xmlns:templates="clr-namespace:DependencyScanner.Standalone.Templates"
        xmlns:model="clr-namespace:DependencyScanner.Core.Model;assembly=DependencyScanner.Core"
        mc:Ignorable="d"
        Title="Dependency scanner"
        Height="{Binding ElementName=TheMainWindow, Path=WindowHeight, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Delay=500}"
        Width="{Binding ElementName=TheMainWindow, Path=WindowWidth, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Delay=500}"
        MinWidth="550"
        x:Name="TheMainWindow"
        RightWindowCommandsOverlayBehavior="Never"
        d:DataContext="{d:DesignInstance viewModel:MainViewModel , IsDesignTimeCreatable=True}"
        >
    <Controls:MetroWindow.RightWindowCommands>
        <Controls:WindowCommands>
            <Button Content="Settings" Click="Settings_Click"/>
        </Controls:WindowCommands>
    </Controls:MetroWindow.RightWindowCommands>
    <Controls:MetroWindow.Flyouts>
        <Controls:FlyoutsControl>
            <Controls:Flyout x:Name="settingsFlyout"
                             Width="500"
                             Header="Settings"
                             Position="Right"
                             IsModal="True">
                <DockPanel LastChildFill="True" DataContext="{Binding MainSettings}">
                    <DockPanel.Resources>
                        <Ellipse x:Key="AppThemeMenuIcon"
                                 Width="16"
                                 Height="16"
                                 x:Shared="False"
                                 Fill="{Binding ColorBrush, Mode=OneWay}"
                                 Stroke="{Binding BorderColorBrush, Mode=OneWay}"
                                 StrokeThickness="1" />
                        <Ellipse x:Key="AccentMenuIcon"
                                 Width="16"
                                 Height="16"
                                 x:Shared="False"
                                 Fill="{Binding ColorBrush, Mode=OneWay}" />

                        <Style x:Key="AppThemeMenuItemStyle"
                               BasedOn="{StaticResource MetroMenuItem}"
                               TargetType="{x:Type MenuItem}">
                            <Setter Property="Command" Value="{Binding ChangeAccentCommand}" />
                            <Setter Property="Header" Value="{Binding Name, Mode=OneWay}" />
                            <Setter Property="Icon" Value="{StaticResource AppThemeMenuIcon}" />
                        </Style>

                        <Style x:Key="AccentColorMenuItemStyle"
                               BasedOn="{StaticResource MetroMenuItem}"
                               TargetType="{x:Type MenuItem}">
                            <Setter Property="Command" Value="{Binding ChangeAccentCommand}" />
                            <Setter Property="Header" Value="{Binding Name, Mode=OneWay}" />
                            <Setter Property="Icon" Value="{StaticResource AccentMenuIcon}" />
                        </Style>
                    </DockPanel.Resources>
                    <Menu Grid.Row="0"
                          Margin="5"
                          HorizontalAlignment="Left"
                          VerticalAlignment="Stretch"
                          DockPanel.Dock="Top">
                        <MenuItem Header="Theme"
                                  ItemContainerStyle="{StaticResource AppThemeMenuItemStyle}"
                                  ItemsSource="{Binding ElementName=TheMainWindow, Path=AppThemes, Mode=OneWay}" />
                        <MenuItem Header="Accent"
                                  ItemContainerStyle="{StaticResource AccentColorMenuItemStyle}"
                                  ItemsSource="{Binding ElementName=TheMainWindow, Path=AccentColors, Mode=OneWay}" />
                    </Menu>
                    <StackPanel Margin="20">
                        <StackPanel.Resources>
                            <Style TargetType="{x:Type Controls:ToggleSwitch}" BasedOn="{StaticResource MahApps.Metro.Styles.ToggleSwitch.Win10}">
                                <Setter Property="Margin" Value="0 10 0 0"/>
                            </Style>
                            <Style TargetType="{x:Type Label}" BasedOn="{StaticResource {x:Type Label}}">
                                <Setter Property="FontSize" Value="18"/>
                                <Setter Property="Margin" Value="5 20 0 0"/>
                            </Style>
                        </StackPanel.Resources>
                        <Label Content="Scan: " Margin="5 0 0 0"/>
                        <Controls:ToggleSwitch OnLabel="Execute scan on app start" OffLabel="Do not execute scan on app start" 
                                               IsChecked="{Binding ExecuteScanOnInit}"/>

                        <Label Content="Show / Hide action buttons in solution detail"/>
                        <Controls:ToggleSwitch OnLabel="Show CMD" OffLabel="Hide CMD" IsChecked="{Binding ShowCmdButton}"/>
                        <Controls:ToggleSwitch OnLabel="Show folder" OffLabel="Hide folder" IsChecked="{Binding ShowFolderButton}"/>
                        <Controls:ToggleSwitch OnLabel="Show Open" OffLabel="Hide Open" IsChecked="{Binding ShowOpenButton}"/>
                        <Label Content="Actions:" />
                        <TextBlock Text="Prefered console tool:"/>
                        <StackPanel Orientation="Horizontal" >
                            <TextBox Margin="0 10 20 0" Width="300"
                                     Controls:TextBoxHelper.ClearTextButton="True"
                                     Text="{Binding PreferedConsoleTool}"
                                     >
                            </TextBox>
                            <Button Content="Test" Width="70" Height="20" Margin="0 10 0 0"/>
                        </StackPanel>
                        <TextBlock Text="Prefered web browser" Margin="0 10 0 0"/>
                        <StackPanel Orientation="Horizontal" >
                            <TextBox Margin="0 10 20 0" Width="300"
                                     Controls:TextBoxHelper.ClearTextButton="True"
                                     Text="{Binding PreferencedWebBrowser}"
                                     >
                            </TextBox>
                            <Button Content="Test" Width="70" Height="20" Margin="0 10 0 0"/>
                        </StackPanel>
                    </StackPanel>
                </DockPanel>
            </Controls:Flyout>
        </Controls:FlyoutsControl>
    </Controls:MetroWindow.Flyouts>
    <Controls:MetroWindow.InputBindings>
        <KeyBinding Modifiers="Ctrl" Key="Y" Command="{Binding ElementName=TheMainWindow, Path=SwitchTab}" CommandParameter="0"/>
        <KeyBinding Modifiers="Ctrl" Key="X" Command="{Binding ElementName=TheMainWindow, Path=SwitchTab}" CommandParameter="1"/>
        <KeyBinding Modifiers="Ctrl" Key="C" Command="{Binding ElementName=TheMainWindow, Path=SwitchTab}" CommandParameter="2"/>
    </Controls:MetroWindow.InputBindings>
    <Controls:MetroWindow.Resources>
        <converter:NullToVisibilityConverter x:Key="HideIfNull" Positive="Collapsed" Negative="Visible"/>
        <converter:NullToBoolConverter x:Key="NullToFalse" Positive="False" Negative="True"/>
        <converter:BoolToVisibilityConverter x:Key="TrueToVisible"/>
        <converter:BoolToVisibilityConverter x:Key="FalseToCollapsed" Negative="Collapsed"/>
        <converter:BoolToBoolConverter x:Key="InvertBool" Positive="False" Negative="True"/>
    </Controls:MetroWindow.Resources>
    <Grid>
        <Grid.Resources>
            <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Controls.AnimatedTabControl.xaml" />
        </Grid.Resources>
        <TabControl Controls:TabControlHelper.Underlined="SelectedTabItem" x:Name="MainTabControl">
            <TabItem Header="Browse" DataContext="{Binding BrowseVM}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal" Grid.Row="0">
                        <Button Margin="5,5,0,5" Content="Scan" HorizontalAlignment="Left"
                            Command="{Binding ScanCommand}"
                            Visibility="{Binding WorkingDirectory, Converter={StaticResource HideIfNull}}" Grid.Row="1"
                            IsEnabled="{Binding IsScanning, Converter={StaticResource InvertBool}}"
                            />
                        <Button Margin="5,5,0,5" Content="Cancel" HorizontalAlignment="Left"
                            Command="{Binding CancelCommand}"
                            Visibility="{Binding IsScanning, Converter={StaticResource FalseToCollapsed}}" Grid.Row="1"
                            />
                        <Button Content="Pick working directory" HorizontalAlignment="Left" Margin="5" Command="{Binding PickWorkingDirectoryCommand}"/>
                        <TextBlock Text="{Binding WorkingDirectory.FullName, StringFormat='Your folder: {0}'}" VerticalAlignment="Center" Margin="5"/>
                    </StackPanel>
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="{Binding ElementName=TheMainWindow, Path=SolutionWidth, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Delay=500}"
                                              MinWidth="250"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <ProgressBar Grid.Row="0" Grid.ColumnSpan="4" Value="{Binding Progress}" Visibility="{Binding IsScanning, Converter={StaticResource TrueToVisible}}">
                            <ProgressBar.Style>
                                <Style TargetType="{x:Type ProgressBar}" BasedOn="{StaticResource MahApps.Metro.Styles.ProgressBar}">
                                    <Setter Property="IsIndeterminate" Value="False"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Progress}" Value="0">
                                            <Setter Property="IsIndeterminate" Value="True"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ProgressBar.Style>
                        </ProgressBar>
                        <Label Content="{Binding ProgressMessage}" FontSize="11" Padding="2" Grid.Row="0" Grid.ColumnSpan="4" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="{Binding IsScanning, Converter={StaticResource TrueToVisible}}"/>
                        <GridSplitter Width="5" Grid.Column="1" Grid.Row="1" Grid.RowSpan="2" ResizeBehavior="PreviousAndNext"/>
                        <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="0" >
                            <Label Content="Solutions: " VerticalAlignment="Center"/>
                            <TextBox Margin="2" Width="180"
                                     Text="{Binding SolutionFilter, Delay=300, UpdateSourceTrigger=PropertyChanged}"
                                     Controls:TextBoxHelper.ClearTextButton="True"
                                     Controls:TextBoxHelper.Watermark="Search...">
                            </TextBox>
                        </StackPanel>
                        <ListBox x:Name="AllSolutions" Grid.Row="2" Grid.Column="0" ItemsSource="{Binding FilterScanResult}" Margin="5">
                            <ListBox.Resources>
                                <DataTemplate DataType="{x:Type model:SolutionResult}">
                                    <templates:SolutionTemplate DataContext="{Binding}"/>
                                </DataTemplate>
                            </ListBox.Resources>
                        </ListBox>
                        <Label Content="Projects: " Grid.Row="1" Grid.Column="2"/>
                        <ListBox Margin="5" x:Name="Projects" 
                                 Grid.Row="2" Grid.Column="2"
                                 ItemsSource="{Binding ElementName=AllSolutions, Path=SelectedItem.Projects}">
                            <ListBox.Resources>
                                <DataTemplate DataType="{x:Type model:ProjectResult}">
                                    <templates:ProjectTemplate DataContext="{Binding}"/>
                                </DataTemplate>
                            </ListBox.Resources>
                        </ListBox>
                        <Label Content="Packages: " Grid.Row="1" Grid.Column="3"/>
                        <DataGrid Margin="5" SelectionMode="Single" 
                                  Grid.Row="2" Grid.Column="3"
                                  ItemsSource="{Binding ElementName=Projects, Path=SelectedItem.References}" 
                                  IsReadOnly="True" AutoGenerateColumns="False" CanUserAddRows="False">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Id" Binding="{Binding Id}" />
                                <DataGridTextColumn Header="Version" Binding="{Binding Version}" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="Consolidate solutions" DataContext="{Binding ConsolidateSolutionsVM}" x:Name="ConsolidateSolutions">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                        <Button Content="Select all" Margin="5" Command="{Binding SelectAllCommand}"/>
                        <Button Content="Deselect all" Margin="5" Command="{Binding DeSelectAllCommand}"/>
                        <Button Content="Quick compare" Command="{Binding ScanCommand}" Margin="5" HorizontalAlignment="Left"/>
                    </StackPanel>
                    <Grid Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="{Binding ElementName=TheMainWindow, Path=SolutionWidth, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Delay=500}"
                                              MinWidth="250"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <GridSplitter Width="5" Grid.Column="1" Grid.Row="1" ResizeBehavior="PreviousAndNext"/>
                        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0" >
                            <Label Content="Select solutions: " VerticalAlignment="Center"/>
                            <TextBox Margin="2" Width="180"
                                     Text="{Binding SolutionFilter, Delay=300, UpdateSourceTrigger=PropertyChanged}"
                                     Controls:TextBoxHelper.ClearTextButton="True"
                                     Controls:TextBoxHelper.Watermark="Search...">
                            </TextBox>
                        </StackPanel>
                        <ListBox Grid.Row="1" Grid.Column="0" ItemsSource="{Binding FilterScanResult}" Margin="5">
                            <ListBox.Resources>
                                <DataTemplate DataType="{x:Type viewModel:SolutionSelectionViewModel}">
                                    <templates:SelectableSolutionTemplate DataContext="{Binding}"/>
                                </DataTemplate>
                            </ListBox.Resources>
                        </ListBox>
                        <Label Content="Consolidate nugets: " Grid.Row="0" Grid.Column="2"/>
                        <DataGrid x:Name="References" SelectionMode="Single" 
                                  Grid.Row="1" Grid.Column="2"
                                  Margin="5"
                                  ItemsSource="{Binding ResultReferences}" AutoGenerateColumns="False" CanUserAddRows="False">
                            <DataGrid.Columns>
                                <DataGridTextColumn IsReadOnly="True" Header="Id" Binding="{Binding Id}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        <Label Content="Occurs in solutions: " Grid.Row="0" Grid.Column="3"/>
                        <DataGrid ItemsSource="{Binding ElementName=References, Path=SelectedItem.References}"
                                  Margin="5"
                                  SelectionMode="Single"
                                  Grid.Row="1" Grid.Column="3"
                                  AutoGenerateColumns="False"  CanUserAddRows="False">
                            <DataGrid.Columns>
                                <DataGridTemplateColumn Header="#">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
                                                <Button Margin="2" Content="Open" ToolTip="Open solution" 
                                                        Command="{Binding ElementName=TheMainWindow, Path=DataContext.RunCommand}"
                                                        CommandParameter="{Binding Key.Info.FullName}"/>
                                                <Button Margin="2" Content="Folder" ToolTip="Open Folder" 
                                                        Command="{Binding ElementName=TheMainWindow, Path=DataContext.RunCommand}"
                                                        CommandParameter="{Binding Key.Info.DirectoryName}"/>
                                                <Button Margin="2" Content="CMD" ToolTip="Open CMD" 
                                                        Command="{Binding ElementName=TheMainWindow, Path=DataContext.OpenCmdCommand}"
                                                        CommandParameter="{Binding Key.Info.DirectoryName}"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTemplateColumn Header="Solution" IsReadOnly="True">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Label Content="{Binding Key}" ToolTip="{Binding Key.Info.FullName}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn IsReadOnly="True" Header="Version" Binding="{Binding Value}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="Consolidate project" DataContext="{Binding ConsolidateProjectsViewModel}" >
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                        <Button Content="Compare selected" Command="{Binding ScanCommand}" Margin="5" HorizontalAlignment="Left"
                                IsEnabled="{Binding ElementName=ProjectScanResult, Path=SelectedItem, Converter={StaticResource NullToFalse}}"
                                CommandParameter="{Binding ElementName=ProjectScanResult, Path=SelectedItem}"/>
                        <Button Content="Compare all" Margin="5"
                                Command="{Binding CompareAllCommand}"
                                />
                    </StackPanel>
                    <Grid Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="{Binding ElementName=TheMainWindow, Path=SolutionWidth, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Delay=500}"
                                              MinWidth="250"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <GridSplitter Width="5" Grid.Column="1" Grid.Row="1" ResizeBehavior="PreviousAndNext"/>
                        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0" >
                            <Label Content="Select solution to check: " VerticalAlignment="Center"/>
                            <TextBox Margin="2" Width="180"
                                     Text="{Binding SolutionFilter, Delay=300, UpdateSourceTrigger=PropertyChanged}"
                                     Controls:TextBoxHelper.ClearTextButton="True"
                                     Controls:TextBoxHelper.Watermark="Search...">
                            </TextBox>
                        </StackPanel>
                        <ListBox x:Name="ProjectScanResult" Grid.Row="1" Grid.Column="0" ItemsSource="{Binding FilterScanResult}" Margin="5">
                            <ListBox.Resources>
                                <DataTemplate DataType="{x:Type viewModel:SolutionProjectCompareResult}">
                                    <templates:SolutionProjectCompareTemplate DataContext="{Binding}"/>
                                </DataTemplate>
                            </ListBox.Resources>
                        </ListBox>
                        <Label Content="Consolidate nugets: " Grid.Row="0" Grid.Column="2"/>
                        <DataGrid x:Name="ProjectReferences" SelectionMode="Single" 
                                  Grid.Row="1" Grid.Column="2"
                                  Margin="5"
                                  ItemsSource="{Binding ElementName=ProjectScanResult, Path=SelectedItem.ProjectResult}" AutoGenerateColumns="False" CanUserAddRows="False">
                            <DataGrid.Columns>
                                <DataGridTextColumn IsReadOnly="True" Header="Id" Binding="{Binding Id}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        <Label Content="Occurs in projects: " Grid.Row="0" Grid.Column="3"/>
                        <DataGrid ItemsSource="{Binding ElementName=ProjectReferences, Path=SelectedItem.References}"
                                  Margin="5"
                                  SelectionMode="Single"
                                  Grid.Row="1" Grid.Column="3"
                                  AutoGenerateColumns="False"  CanUserAddRows="False">
                            <DataGrid.Columns>
                                <DataGridTemplateColumn Header="Solution" IsReadOnly="True">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Label Content="{Binding Key.ProjectInfo.Name}" ToolTip="{Binding Key.ProjectInfo.FullName}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn IsReadOnly="True" Header="Version" Binding="{Binding Value}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Controls:MetroWindow>
