<UserControl x:Class="DependencyScanner.Standalone.Templates.SolutionProjectCompareTemplate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DependencyScanner.Standalone.Templates"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             >
    <UserControl.Style>
        <Style TargetType="UserControl">
            <Style.Triggers>
                <DataTrigger Binding="{Binding HasConsolidates}" Value="True">
                    <Setter Property="Background" Value="LightPink"/>
                </DataTrigger>
                <!--<Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="HotPink"/>
                </Trigger>-->
            </Style.Triggers>
        </Style>
    </UserControl.Style>
    <Grid>
        <local:SolutionTemplate DataContext="{Binding Result}" Grid.Column="1"/>
    </Grid>
</UserControl>
